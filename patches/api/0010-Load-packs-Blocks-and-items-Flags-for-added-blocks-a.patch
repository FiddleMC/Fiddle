diff --git a/src/main/java/org/bukkit/Material.java b/src/main/java/org/bukkit/Material.java
index 039d8152639b22fbb6af9dfbcc7eb38466ef0f6a..e95cf6a92d6620d9d80984a1e72c3d40abc926a2 100644
--- a/src/main/java/org/bukkit/Material.java
+++ b/src/main/java/org/bukkit/Material.java
@@ -11074,4 +11074,40 @@ public enum Material implements Keyed, Translatable, net.kyori.adventure.transla
     public boolean isEnabledByFeature(@NotNull World world) {
         return Bukkit.getDataPackManager().isEnabledByFeature(this, world);
     }
+
+    // Fiddle start - load packs - blocks and items - flags for added blocks and items - API
+    /**
+     * Gets if this Material represents a {@linkplain #isBlock() block} that was added by a Fiddle pack.
+     *
+     * @return Whether this Material is a block added by a Fiddle pack.
+     */
+    public boolean isBlockAddedByFiddle() {
+        return Bukkit.getUnsafe().isBlockAddedByFiddle(this);
+    }
+
+    /**
+     * Gets if this Material represents an {@linkplain #isItem() item} that was added by a Fiddle pack.
+     *
+     * @return Whether this Material is an item added by a Fiddle pack.
+     */
+    public boolean isItemAddedByFiddle() {
+        return Bukkit.getUnsafe().isItemAddedByFiddle(this);
+    }
+
+    /**
+     * Gets if this Material represents a {@linkplain #isBlock() block} that was added by a Fiddle pack,
+     * or if this Material represents an {@linkplain #isItem() item} that was added by a Fiddle pack.
+     * <br>
+     * Hypothetically (even though this is currently impossible, and likely will never be possible),
+     * if this Material represents a block that exists in vanilla, but also represents an item
+     * (with the same namespaced key) that does not exist in vanilla but was added by a Fiddle pack,
+     * then this method returns true.
+     *
+     * @return Whether this Material is a block or item added by a Fiddle pack.
+     */
+    public boolean isAddedByFiddle() {
+        return this.isBlockAddedByFiddle() || this.isItemAddedByFiddle();
+    }
+    // Fiddle end - load packs - blocks and items - flags for added blocks and items - API
+
 }
