+        } catch (final IOException ex) {
+            throw new RuntimeException("Could not setup FiddleConfigurations", ex);
+        }
+    }
+
+    @Override
+    public int getWorldConfigurationCurrentVersion() {
+        return FiddleWorldConfiguration.CURRENT_VERSION;
+    }
+
+}
