diff --git a/build.gradle.kts b/build.gradle.kts
index 295855fca149e12c6bf976c6ff577084722c62c4..20cdb0325ff47d661af5a86bed9992c33dde6a0e 100644
--- a/build.gradle.kts
+++ b/build.gradle.kts
@@ -66,6 +66,16 @@ dependencies {
 }
 
 val craftbukkitPackageVersion = "1_20_R3" // Paper
+
+// Fiddle start - hide irrelevant compilation warnings
+tasks.withType<JavaCompile> {
+    val compilerArgs = options.compilerArgs
+    compilerArgs.add("-Xlint:-module")
+    compilerArgs.add("-Xlint:-removal")
+    compilerArgs.add("-Xlint:-dep-ann")
+}
+// Fiddle end - hide irrelevant compilation warnings
+
 tasks.jar {
     archiveClassifier.set("dev")
 
