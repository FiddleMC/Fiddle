@@ -102,6 +102,8 @@ public class FriendlyByteBuf extends ByteBuf {
     public @Nullable java.lang.ref.WeakReference<net.minecraft.network.protocol.@org.jetbrains.annotations.NotNull Packet<?>> writingPacket;
